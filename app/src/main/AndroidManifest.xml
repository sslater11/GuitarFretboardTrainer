<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simonslater.guitarfretboardtrainer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GuitarFretboardTrainer">
        <activity
            android:name=".ChromaticScaleActivity"
            android:exported="false" />
        <activity
            android:name=".IntermediateSingleStringSelection"
            android:exported="false" />
        <activity
            android:name=".BeginnerNextStepActivity"
            android:exported="false" />
        <activity
            android:name=".LearnOrReviseActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BeginnerStringSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".FinishedActivity"
            android:exported="false" />
        <activity
            android:name=".StudyModeActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>
